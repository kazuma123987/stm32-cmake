{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug",
            "type": "shell",
            "command": [
                "tools/build.bat Debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Release",
            "type": "shell",
            "command": [
                "tools/build.bat Release"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "1.download && debug",
            "type": "shell",
            "command": [
                "openocd"
            ],
            "args": [
                "-f",
                "tools/openocd.cfg",
                "-c",
                "program build/demo.bin verify reset exit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Debug"
            ]
        },
        {
            "label": "2.download(openocd)",
            "type": "shell",
            "command": [
                "openocd"
            ],
            "args": [
                "-f",
                "tools/openocd.cfg",
                "-c",
                "program ./build/demo.bin 0x08000000 exit reset",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Release"
            ]
        },
        {
            "label": "2.download(jlink)",
            "type": "shell",
            "command": [
                "JLink -autoconnect 1 -device STM32F103ZE -if swd -speed 4000 -commandfile ./tools/download.jlink"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Release"
            ]
        },
        {
            "label": "3.clean",
            "type": "shell",
            "command": [
                "rm -r build/*"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ]
}